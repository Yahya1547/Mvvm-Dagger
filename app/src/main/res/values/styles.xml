<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--        <item name="colorPrimary">@color/colorPrimary</item>-->
        <!--        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--        <item name="colorAccent">@color/colorAccent</item>-->
    </style>
    <style name="TextAppearance.Heading" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="TextAppearance.Title" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextAppearance.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Body.Input" parent="TextAppearance.Body">
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:textColorHint">@color/grey_light</item>
    </style>

    <style name="TextAppearance.Body.Input.Datetime" parent="TextAppearance.Body.Input">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Body.Error" parent="TextAppearance.Body">
        <item name="android:textColor">@color/secondary_darker</item>
    </style>

    <style name="TextAppearance.Button.Big" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextAppearance.Button.Default" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="TextAppearance.Card.Title.Big" parent="TextAppearance.Title">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextAppearance.Card.Title" parent="TextAppearance.Body">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextAppearance.Card.Subtitle.Big" parent="TextAppearance.Body">

    </style>
    <style name="TextAppearance.Card.Subtitle" parent="TextAppearance.Body">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Widget.Restaurant.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/primary</item>
        <item name="strokeColor">@color/secondary_heavy_lighter</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="Restaurant">
        <item name="android:paddingTop">?attr/actionBarSize</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>
</resources>